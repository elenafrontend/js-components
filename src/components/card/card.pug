
include ../../components/tags/tags

mixin card(data)
  .card
    a.card__image(href="#")
      img(src=require(`./components/card/images/${data.img}`) alt=data.title)
    .card__data
      h3.card__title= data.title
      ul.card__info
        each item in data.info
          li.card__info-item= item
      +tags(data.tags)(class="card__tags")
